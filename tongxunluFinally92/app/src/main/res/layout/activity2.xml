<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/but_id"
        android:layout_width="185dp"
        android:layout_height="66dp"
        android:layout_marginBottom="192dp"
        android:text="手动上传通话记录"
        android:textSize="14sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.915" />

    <Button
        android:id="@+id/saveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="保存姓名"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/salesmanBox"
        app:layout_constraintTop_toTopOf="@+id/salesmanBox"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/salsman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="48dp"
        android:text="销售名称"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/salesmanBox"
        android:layout_width="267dp"
        android:layout_height="41dp"
        android:layout_below="@+id/salsman"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:hint="输入英文名，只有一次输入机会"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/salsman"
        app:layout_constraintTop_toBottomOf="@+id/salsman"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/work"
        android:layout_width="185dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="开启定时发送"
        app:layout_constraintEnd_toEndOf="@+id/but_id"
        app:layout_constraintStart_toStartOf="@+id/but_id"
        app:layout_constraintTop_toTopOf="@+id/but_id"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="323dp"
        android:layout_height="64dp"
        android:layout_gravity="center"

        android:layout_marginTop="12dp"
        android:text="点击开启每天17点自动发送通话记录"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/work"
        app:layout_constraintStart_toStartOf="@+id/work"
        app:layout_constraintTop_toBottomOf="@+id/work"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>